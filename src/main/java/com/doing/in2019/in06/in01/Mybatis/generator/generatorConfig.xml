<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
  <!-- 引入配置文件 -->  
  <properties resource="application.properties"/>
  <!-- DRIVER - 驱动文件指定配置项 -->
  <classPathEntry location="E:\Environment\repository\mysql\mysql-connector-java\5.1.46\mysql-connector-java-5.1.46.jar"/>
  
  <context id="mysql">
  
	<!-- 注释 -->
	<commentGenerator>
	    <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
	    <property name="suppressAllComments" value="true" />
	    <!-- 是否生成注释代时间戳-->
		<property name="suppressDate" value="true" />
	</commentGenerator>

	<!-- 生成的Java文件的编码
	<property name="javaFileEncoding" value="utf-8" /> -->

  	<!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
    <jdbcConnection connectionURL="${spring.datasource.url}" 
    				driverClass="${jdbc.driverClass}" 
    				password="${spring.datasource.password}" 
    				userId="${spring.datasource.username}" />
    <!-- MODEL - 生成实体的位置 -->
    <javaModelGenerator targetPackage="com.neolithic.ie.model" targetProject="src/main/java" />
    <!-- MAPPER - 生成XML文件的位置 -->
    <sqlMapGenerator targetPackage="com.neolithic.ie.mapper" targetProject="src/main/java" />
    <!-- DAO -->
    <javaClientGenerator targetPackage="com.neolithic.ie.mapper" targetProject="src/main/java" type="XMLMAPPER" />
    
    <!-- 生成对应表及类名 -->
    <table tableName="user"></table>
    <table tableName="my_friends"></table>
    <table tableName="friends_request"></table>
    <table tableName="chat_msg"></table>
<!--     <table tableName="user" domainObjectName="OrderInfo" schema="test"></table>
    <table tableName="my_friends" domainObjectName="OrderInfo" schema="test"></table>
    <table tableName="friends_request" domainObjectName="OrderInfo" schema="test"></table>
    <table tableName="chat_msg" domainObjectName="OrderInfo" schema="test"></table> -->
    
  </context>
</generatorConfiguration>